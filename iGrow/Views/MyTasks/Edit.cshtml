@using iGrow.Web.ViewModels.MyTask
@model MyTaskFormViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>MyTask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="MyTasks" asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" type="date"/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <input asp-for="Priority" class="form-control" />
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label asp-for="IsCompleted" class="control-label">Completed</label>
                <input class="form-check-input" asp-for="IsCompleted" />
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Category</label>
                <select asp-for="CategoryId" class="form-control" aria-required="true">
                    @foreach (var category in Model!.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" name="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RecurringTypeId" class="control-label">Recurring Type</label>
                <select asp-for="RecurringTypeId" class="form-control" aria-required="true">
                    @foreach (var recType in Model!.RecurringTypes)
                    {
                        <option value="@recType.Id">@recType.Name</option>
                    }
                </select>
                <span asp-validation-for="RecurringTypeId" name="Recurring Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="All">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
