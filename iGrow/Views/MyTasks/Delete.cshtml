@model iGrow.Web.ViewModels.MyTask.MyTaskDeleteViewModel

@{
    ViewData["Title"] = "Delete Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card shadow-sm col-md-6 mx-auto">
        <div class="card-header">
            <h4 class="mb-0 text-danger">Delete Task</h4>
        </div>
        <div class="card-body">
            <p class="lead text-muted">Are you sure you want to delete this task?</p>

            <dl class="row mt-3">
                <dt class="col-sm-4">Title</dt>
                <dd class="col-sm-8">@Model.Title</dd>

                <dt class="col-sm-4">Date</dt>
                <dd class="col-sm-8">@Model.Date</dd>
            </dl>

            <form asp-action="ConfirmDelete" method="post" class="mt-3">
                @Html.AntiForgeryToken()
                <input asp-for="Id" type="hidden" />
                <div class="d-flex">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="All" class="btn btn-outline-secondary ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>