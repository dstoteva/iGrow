@model IEnumerable<iGrow.Web.ViewModels.MyTask.MyTaskAllViewModel>

@{
    ViewData["Title"] = "All Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3">Tasks</h1>
        <a asp-controller="MyTasks" asp-action="Create" class="btn btn-success">
            New Task
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Priority</th>
                        <th>Completed</th>
                        <th>Category</th>
                        <th>Recurring</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4">No tasks found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td>@item.Priority</td>
                                <td>@(item.IsCompleted ? "Yes" : "No")</td>
                                <td>@item.CategoryName</td>
                                <td>@item.RecurringTypeName</td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Details</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>