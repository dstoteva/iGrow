@model iGrow.Web.ViewModels.MyTask.MyTaskDetailsViewModel

@{
    ViewData["Title"] = "Task Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 form-card-wrapper">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">@Model.Title</h4>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Note</dt>
                        <dd class="col-sm-8">@Model.Note</dd>

                        <dt class="col-sm-4">Date</dt>
                        <dd class="col-sm-8">@Model.Date</dd>

                        <dt class="col-sm-4">Priority</dt>
                        <dd class="col-sm-8">@Model.Priority</dd>

                        <dt class="col-sm-4">Completed</dt>
                        <dd class="col-sm-8">@(Model.IsCompleted ? "Yes" : "No")</dd>

                        <dt class="col-sm-4">Recurring Type</dt>
                        <dd class="col-sm-8">@Model.RecurringTypeName</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.CategoryName</dd>
                    </dl>

                    <div class="mt-3 d-flex gap-2">
                        <a asp-action="All" class="btn btn-secondary">Back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>