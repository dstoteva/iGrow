@model iGrow.Web.ViewModels.MyTask.MyTaskDetailsViewModel

@{
    ViewData["Title"] = "Task Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@Model.Title</h4>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary me-1">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger">Delete</a>
            </div>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Note</dt>
                <dd class="col-sm-9">@Model.Note</dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.Date</dd>

                <dt class="col-sm-3">Priority</dt>
                <dd class="col-sm-9">@Model.Priority</dd>

                <dt class="col-sm-3">Completed</dt>
                <dd class="col-sm-9">@(Model.IsCompleted ? "Yes" : "No")</dd>

                <dt class="col-sm-3">Recurring Type</dt>
                <dd class="col-sm-9">@Model.RecurringTypeName</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.CategoryName</dd>
            </dl>
            <a asp-action="All" class="btn btn-secondary">Back to list</a>
        </div>
    </div>
</div>